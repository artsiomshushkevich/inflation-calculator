{
  "name": "inflation-calculator",
  "private": true,
  "version": "0.0.0",
  "homepage": "https://artsiomshushkevich.github.io/inflation-calculator",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run generate-icons && vite build",
    "lint": "eslint . --ext js,jsx --max-warnings 0",
    "format": "prettier --write \"**/*.{js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,css,md}\"",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "generate-icons": "node scripts/generate-icons.js",
    "prepare": "husky"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "i18next": "^25.7.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^15.7.4",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "postcss": "^8.5.6",
    "prettier": "^3.7.3",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.18",
    "vite": "^6.4.1"
  }
}
